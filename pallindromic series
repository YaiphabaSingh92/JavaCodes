
class Firstcode
{
	public static void main(String args[])
	{
		int i,j,n=6; //n is to be entered by user
		for(i=1;i<=n;i++)
		{
			for(j=1;j<=n-i;j++) //loop for spaces
			{
				System.out.print(" ");
			}
			for(j=i;j>=1;j--) 
			{
				System.out.print(j);
			}
			for(j=2;j<=i;j++)
			{
				System.out.print(j);
			}
			System.out.println("");
		}
		
		
	}	
}
